<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="170dp"
        android:text="Welcome back"
        android:textColor="#000000"
        android:textSize="40sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/viewLogin"
        android:layout_width="167dp"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="584dp"
        android:background="@drawable/rectangle_2" />

    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/viewLogin"
        android:layout_alignTop="@+id/viewLogin"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="15dp"
        android:text="@string/log_in"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_alignStart="@+id/viewLogin"
        android:layout_marginStart="56dp" />

    <View
        android:id="@+id/viewRegister"
        android:layout_width="167dp"
        android:layout_height="52dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="584dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/rectangle_1" />

    <TextView
        android:id="@+id/log_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/viewRegister"
        android:layout_alignLeft="@+id/viewRegister"
        android:layout_alignTop="@+id/viewRegister"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="15dp"
        android:text="@string/register_2"
        android:textColor="#ffffffff"
        android:textSize="18sp" />


</RelativeLayout>